            <PivotItem x:Name="Pin">
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon Style="{StaticResource PivotIconStyle}" Glyph="&#xE75F;" />
                    </StackPanel>
                </PivotItem.Header>
                <Grid x:Name="InputArea">
                    <Grid x:Name="PinPanel" Background="Transparent" Width="300" Height="300" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button x:Name="Pin1" Grid.Column="0" Grid.Row="0" Style="{StaticResource PinButtonStyle}" Click="Pin1_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x2776;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin2" Grid.Column="1" Grid.Row="0" Style="{StaticResource PinButtonStyle}" Click="Pin2_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x2777;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin3" Grid.Column="2" Grid.Row="0" Style="{StaticResource PinButtonStyle}" Click="Pin3_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x2778;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin4" Grid.Column="0" Grid.Row="1" Style="{StaticResource PinButtonStyle}" Click="Pin4_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x2779;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin5" Grid.Column="1" Grid.Row="1" Style="{StaticResource PinButtonStyle}" Click="Pin5_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x277A;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin6" Grid.Column="2" Grid.Row="1" Style="{StaticResource PinButtonStyle}" Click="Pin6_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x277B;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin7" Grid.Column="0" Grid.Row="2" Style="{StaticResource PinButtonStyle}" Click="Pin7_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x277C;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin8" Grid.Column="1" Grid.Row="2" Style="{StaticResource PinButtonStyle}" Click="Pin8_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x277D;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin9" Grid.Column="2" Grid.Row="2" Style="{StaticResource PinButtonStyle}" Click="Pin9_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x277E;"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="Pin0" Grid.Column="1" Grid.Row="3" Style="{StaticResource PinButtonStyle}" Click="Pin0_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFontStyle}" Glyph="&#x24FF;"/>
                            </Button.Content>
                        </Button>

                        <Button x:Name="PinBackSpace" Grid.Column="2" Grid.Row="4" Style="{StaticResource PinButtonStyle}" Click="PinBackSpace_Click" Margin="0,0,0,0">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFunctionFontStyle}" Glyph="&#xE750;" FontSize="36"/>
                            </Button.Content>
                        </Button>

                        

                        <StackPanel Grid.ColumnSpan="2" Grid.Row="4" Margin="0,4,0,0" VerticalAlignment="Center">
                            <PasswordBox x:Name="PinText" Style="{StaticResource PinTextStyle}" Width="200" TabIndex="0" />
                        </StackPanel>

                        <Button x:Name="PinOk" Grid.Column="0" Grid.Row="3" Style="{StaticResource PinButtonStyle}" Click="PinOk_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFunctionFontStyle}" Glyph="&#xEC61;" Foreground="{ThemeResource SystemAccentColor}"/>
                            </Button.Content>
                        </Button>

                        <Button x:Name="PinCancel" Grid.Column="2" Grid.Row="3" Style="{StaticResource PinButtonStyle}" Click="bnCancel_Click">
                            <Button.Content>
                                <FontIcon Style="{StaticResource PinFunctionFontStyle}" Glyph="&#xEB90;" Foreground="{ThemeResource SystemAccentColor}"/>
                            </Button.Content>
                        </Button>

                    </Grid>
                </Grid>
            </PivotItem>

            <PivotItem x:Name="Rfid">
                <PivotItem.Header>
                    <StackPanel>
                        <FontIcon Style="{StaticResource PivotIconStyle}" Glyph="&#xE957;"/>
                    </StackPanel>
                </PivotItem.Header>

                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock x:Name="RfidSubtitle" HorizontalAlignment="Center" Margin="0,0,0,32" Foreground="{ThemeResource SystemAccentColor}" 
                               Style="{StaticResource SubtitleTextBlockStyle}" Text="Kérem érintse az érzékelőhöz a kártyát!" TextWrapping="WrapWholeWords"></TextBlock>
                    <muxc:ProgressRing x:Name="progressRingRfid" Grid.Column="1" Grid.Row="3" IsActive="True" Visibility="Visible" Margin="4,4,4,4" Width="180"/>
                </StackPanel>
            </PivotItem>

