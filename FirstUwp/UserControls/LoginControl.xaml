                            <Button.Content>
                                <FontIcon
                                    FontSize="35"
                                    Foreground="White"
                                    Glyph="&#xEB90;"
                                    Style="{StaticResource PinFunctionFontStyle}" />
                            </Button.Content>
                        </Button>-->

                    </Grid>
                </Grid>
            </PivotItem>

            <PivotItem x:Name="Rfid" Margin="0,20,0,0">
                <PivotItem.Header>
                    <StackPanel Style="{StaticResource PivotHeaderStyle}">
                        <FontIcon Glyph="&#xE957;" Style="{StaticResource PivotIconStyle}" />
                    </StackPanel>
                </PivotItem.Header>

                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock
                        x:Name="RfidSubtitle"
                        Margin="0,0,0,32"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="#1CD49E"
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        Text="Kérem érintse az érzékelőhöz a kártyát!"
                        TextWrapping="WrapWholeWords" />
                    <muxc:ProgressRing
                        x:Name="progressRingRfid"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="130"
                        Height="130"
                        Margin="4,4,4,4"
                        Foreground="#1CD49E"
                        IsActive="True"
                        Visibility="Visible" />
                </StackPanel>
            </PivotItem>

