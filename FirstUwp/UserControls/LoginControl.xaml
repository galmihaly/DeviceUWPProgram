            <PivotItem x:Name="Pin" Margin="0,20,0,0">
                <PivotItem.Header>
                    <StackPanel Style="{StaticResource PivotHeaderStyle}">
                        <FontIcon Glyph="&#xE75F;" Style="{StaticResource PivotIconStyle}" />
                    </StackPanel>
                </PivotItem.Header>
                <Grid x:Name="InputArea">
                    <Grid
                        x:Name="PinPanel"
                        Width="350"
                        Height="350"
                        Background="Transparent"
                        Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button
                            x:Name="Pin1"
                            Grid.Row="0"
                            Grid.Column="0"
                            Click="Pin1_Click"
                            Content="1"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin2"
                            Grid.Row="0"
                            Grid.Column="1"
                            Click="Pin2_Click"
                            Content="2"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin3"
                            Grid.Row="0"
                            Grid.Column="2"
                            Click="Pin3_Click"
                            Content="3"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin4"
                            Grid.Row="1"
                            Grid.Column="0"
                            Click="Pin4_Click"
                            Content="4"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin5"
                            Grid.Row="1"
                            Grid.Column="1"
                            Click="Pin5_Click"
                            Content="5"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin6"
                            Grid.Row="1"
                            Grid.Column="2"
                            Click="Pin6_Click"
                            Content="6"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin7"
                            Grid.Row="2"
                            Grid.Column="0"
                            Click="Pin7_Click"
                            Content="7"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin8"
                            Grid.Row="2"
                            Grid.Column="1"
                            Click="Pin8_Click"
                            Content="8"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin9"
                            Grid.Row="2"
                            Grid.Column="2"
                            Click="Pin9_Click"
                            Content="9"
                            Style="{StaticResource PinButtonStyle}" />
                        <Button
                            x:Name="Pin0"
                            Grid.Row="3"
                            Grid.Column="1"
                            Click="Pin0_Click"
                            Content="0"
                            Style="{StaticResource PinButtonStyle}" />

                        <Button
                            x:Name="PinBackSpace"
                            Grid.Row="3"
                            Grid.Column="2"
                            Background="#C40133"
                            Click="PinBackSpace_Click"
                            Style="{StaticResource PinButtonStyle}">
                            <Button.Content>
                                <FontIcon
                                    FontSize="36"
                                    Glyph="&#xE750;"
                                    Style="{StaticResource PinFunctionFontStyle}" />
                            </Button.Content>
                        </Button>



                        <StackPanel
                            Grid.Row="4"
                            Grid.ColumnSpan="3"
                            VerticalAlignment="Center">
                            <PasswordBox
                                x:Name="PinText"
                                Width="340"
                                VerticalContentAlignment="Center"
                                Style="{StaticResource PinTextStyle}"
                                TabIndex="0" />
                        </StackPanel>

                        <Button
                            x:Name="PinOk"
                            Grid.Row="3"
                            Grid.Column="0"
                            Background="Green"
                            Click="PinOk_Click"
                            Style="{StaticResource PinButtonStyle}">
                            <Button.Content>
                                <FontIcon
                                    FontSize="35"
                                    Foreground="White"
                                    Glyph="&#xEC61;"
                                    Style="{StaticResource PinFunctionFontStyle}" />
                            </Button.Content>
                        </Button>


                        <!--<Button
                            x:Name="PinCancel"
                            Grid.Row="3"
                            Grid.Column="2"
